{
  "name": "@rasenganjs/kurama",
  "version": "1.0.0",
  "type": "module",
  "description": "Kurama is a lightweight state management library for Rasengan",
  "bugs": {
    "url": "https://github.com/rasengan-dev/rasenganjs/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rasengan-dev/rasenganjs",
    "directory": "packages/rasengan-kurama"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build:compile": "tsc",
    "build:clean": "rimraf ./dist",
    "build": "pnpm run build:clean & pnpm run build:compile",
    "deploy": "pnpm publish --access public",
    "deploy:beta": "pnpm run deploy --tag beta",
    "pack": "pnpm pack --pack-destination ./release/"
  },
  "peerDependencies": {
    "react": "^18.3.1 || ^19.0.0",
    "react-dom": "^18.3.1 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.1 || ^19.0.0",
    "@types/react-dom": "^18.3.1 || ^19.0.0"
  },
  "files": [
    "dist/",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ]
}
